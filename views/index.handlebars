<div class="container">
    <h1>Eat da Burger!</h1>
    <div class="row">
        <div class="col-lg-6">
            <h2>Available Burgers</h2>

            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <p>{{this.id}}. {{this.burger_name}}

                        <button data-burgerid="{{this.id}}" class="eat-burger">Eat da Burger!</button></p>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-lg-6">
            <h2>Eaten Burgers</h2>

            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{this.id}}. {{this.burger_name}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <h2>Add a Burger</h2>
            <form class="create-form">

            <div class="form-group">
                <label for="new-burger">Burger Name:</label>
                <input type="text" id="new-burger" name="name">
            </div>

            <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>